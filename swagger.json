{
  "swagger": "2.0",
  "info": {
    "title": "Books & Videos API",
    "description": "API for managing books and video media",
    "version": "1.0.0"
  },
  "host": "cse341-project2-books.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {

    "/": {
      "get": {
        "description": "API root endpoint",
        "responses": {
          "200": { "description": "OK" }
        }
      }
    },


    "/books/": {
      "get": {
        "tags": ["Books"],
        "description": "Get all books",
        "responses": {
          "200": { "description": "Books retrieved" }
        }
      },
      "post": {
        "tags": ["Books"],
        "description": "Create a new book",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Book"
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "412": { "description": "Validation Failed" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/books/{id}": {
      "get": {
        "tags": ["Books"],
        "description": "Get a single book by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Book retrieved" },
          "404": { "description": "Not Found" }
        }
      },
      "put": {
        "tags": ["Books"],
        "description": "Update a book",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Book"
            }
          }
        ],
        "responses": {
          "200": { "description": "Updated" },
          "412": { "description": "Validation Failed" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "tags": ["Books"],
        "description": "Delete a book",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Deleted" },
          "404": { "description": "Not Found" }
        }
      }
    },

    "/videos/": {
      "get": {
        "tags": ["Videos"],
        "description": "Get all videos",
        "responses": {
          "200": { "description": "Videos retrieved" }
        }
      },
      "post": {
        "tags": ["Videos"],
        "description": "Create a new video entry",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Video"
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "412": { "description": "Validation Failed" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/videos/{id}": {
      "get": {
        "tags": ["Videos"],
        "description": "Get a video by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Video retrieved" },
          "404": { "description": "Not Found" }
        }
      },
      "put": {
        "tags": ["Videos"],
        "description": "Update a video entry",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Video"
            }
          }
        ],
        "responses": {
          "200": { "description": "Updated" },
          "412": { "description": "Validation Failed" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "tags": ["Videos"],
        "description": "Delete a video",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Deleted" },
          "404": { "description": "Not Found" }
        }
      }
    }
  },


  "definitions": {
    "Book": {
      "type": "object",
      "required": ["title", "author"],
      "properties": {
        "title": { "type": "string", "example": "any" },
        "author": { "type": "string", "example": "any" },
        "genre": { "type": "array", "items": { "type": "string" }, "example": ["any"] },
        "pages": { "type": "integer", "example": "#" },
        "publisher": { "type": "string", "example": "any" },
        "year": { "type": "integer", "example": "####" }
      }
    },

    "Video": {
      "type": "object",
      "required": ["title", "director"],
      "properties": {
        "title": { "type": "string", "example": "any" },
        "director": { "type": "string", "example": "any" },
        "year": { "type": "integer", "example": "####" },
        "distributor": { "type": "string", "example": "any" },
        "genre": { "type": "array", "items": { "type": "string" }, "example": ["any"] },
        "runtime": { "type": "string", "example": "# minutes" }
      }
    }
  }
}