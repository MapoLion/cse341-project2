{
  "swagger": "2.0",
  "info": {
    "title": "Books & Videos API",
    "description": "API for managing books and video media",
    "version": "1.0.0"
  },
  "host": "cse341-project2-books.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {


    "/": {
      "get": {
        "description": "",
        "responses": {
          "200": { "description": "OK" }
        }
      }
    },


    "/books/": {
      "get": {
        "tags": ["Books"],
        "description": "Get all books",
        "responses": {
          "200": { "description": "Books retrieved" }
        }
      },
      "post": {
        "tags": ["Books"],
        "description": "Create a new book",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "example": "any" },
                "authors": { "example": ["any"] },
                "firstPublished": { "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "412": { "description": "Validation Failed" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/books/{id}": {
      "get": {
        "tags": ["Books"],
        "description": "Get a single book by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Book retrieved" },
          "404": { "description": "Not Found" }
        }
      },
      "put": {
        "tags": ["Books"],
        "description": "Update a book",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "example": "any" },
                "authors": { "example": ["any"] },
                "firstPublished": { "example": "any" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Updated" },
          "412": { "description": "Validation Failed" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "tags": ["Books"],
        "description": "Delete a book",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Deleted" },
          "404": { "description": "Not Found" }
        }
      }
    },

    "/videos/": {
      "get": {
        "tags": ["Videos"],
        "description": "Get all videos",
        "responses": {
          "200": { "description": "Videos retrieved" }
        }
      },
      "post": {
        "tags": ["Videos"],
        "description": "Create a new video entry",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "example": "any" },
                "director": { "example": "any" },
                "year": { "example": "2000" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "412": { "description": "Validation Failed" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/videos/{id}": {
      "get": {
        "tags": ["Videos"],
        "description": "Get a video by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Video retrieved" },
          "404": { "description": "Not Found" }
        }
      },
      "put": {
        "tags": ["Videos"],
        "description": "Update a video entry",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "example": "any" },
                "director": { "example": "any" },
                "year": { "example": "2000" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Updated" },
          "412": { "description": "Validation Failed" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "tags": ["Videos"],
        "description": "Delete a video",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Deleted" },
          "404": { "description": "Not Found" }
        }
      }
    }

  }
}